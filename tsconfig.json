{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": false,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/domain/*": ["./src/domain/*"],
      "@/infra/*": ["./src/infra/*"],
      "@/application/*": ["./src/application/*"],
      "@/presentation/*": ["./src/presentation/*"],
      "@/main/*": ["./src/main/*"],
      "@/shared/*": ["./src/shared/*"],
      "@/tests/*": ["./tests/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["tests/**/*", "node_modules", "dist"]
}
